{
    "manifest_version": 2,
    "name": "Stylus Pressure",
    "description": "This extension provides stylus pressure information to the browser.",
    "version": "0.2.0",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "nativeMessaging"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "page_action": {
        "default_icon": "icon.png",
        "default_title": "Stylus Pressure",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://aggie.io/*",
                "*://beta.aggie.io/*",
                "*://magmaboard.io/*",
                "*://*.magmaboard.io/*",
                "*://magmastudio.io/*",
                "*://*.magmastudio.io/*",
                "*://magmastudio.app/*",
                "*://draw.lisek.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "externally_connectable": {
        "matches": [
            "*://aggie.io/*",
            "*://beta.aggie.io/*",
            "*://magmaboard.io/*",
            "*://*.magmaboard.io/*",
            "*://magmastudio.io/*",
            "*://*.magmastudio.io/*",
            "*://magmastudio.app/*",
            "*://draw.lisek.com/*"
        ]
    }
}