{
    "manifest_version": 2,
    "name": "Stylus Pressure",
    "description": "This extension provides stylus pressure information to the browser.",
    "version": "0.1.3",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "nativeMessaging"
    ],
    "background": {
        "scripts": [ "background.js" ]
    },
    "page_action": {
        "default_icon": "icon.png",
        "default_title": "Stylus Pressure",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://draw.rushbase.net/*",
                "*://draw2.rushbase.net/*",
                "*://draw.lisek.com/*"
            ],
            "js": [ "content.js" ]
        }
    ],
    "externally_connectable": {
        "matches": [
            "*://draw.rushbase.net/*",
            "*://draw2.rushbase.net/*",
            "*://draw.lisek.com/*"
        ]
    }
}
